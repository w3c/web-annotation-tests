{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "3.2.1-bodyETBProcessingLanguage.json",
    "assertionType": "may",
    "expectedResult": "valid",
    "onUnexpectedResult" : "passAndContinue",
    "errorMessage": "The description of an Embedded Textual Body may include textDirection key with a single value that is one of ltr, rtl, or auto.",    
    "title": "Implements **Embedded Textual Body _textDirection_ key** with a **single value** that is is **one of ltr, rtl, or auto** [model 3.2.1](https://www.w3.org/TR/annotation-model/#bodies-and-targets)",
    "description": "True when Annotation includes one or more Embedded Textual Bodies, one or more of which include single textDirection key with one of ltr, rtl, or auto as value. (Section 3.2.1)",
    "type": "object",
    "properties":
    {
        "body": 
        {
           "oneOf": [
                      { "allOf": 
                        [
                         { "$ref": "bodyTarget.json#/definitions/textualBodyFound" },
                         { "$ref": "bodyTarget.json#/definitions/textDirectionPropertyFound" }
                         ]
                       },
                       { "not":
                         {
                           "items": 
                            { "not":
                               { "allOf": 
                                [
                                  { "$ref": "bodyTarget.json#/definitions/textualBodyFound" },
                                  { "$ref": "bodyTarget.json#/definitions/textDirectionPropertyFound" }
                                 ]
                               }
                             }     
                         }                          
                       }
                     ]                       
         }
     }
}